<h3>Log in</h3>

<%= render 'layouts/errors', :object => @user %>

<%= form_for @user do |f| %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit "Create Account", class: 'btn btn-info' %>
<% end %>
